{
    "name": "Pinocchio",
    "version": "1.0",
    "description": "Gives a webpage a fake news score. With 0 meaning completely fake and 10 being absolutely reliable.",
    "manifest_version": 2,
    "permissions": ["storage", "declarativeContent", "activeTab", "webNavigation", "tabs"],
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/icon16.png",
            "32": "images/icon32.png",
            "128": "images/icon128.png"
          }
     },
     "icons": {
        "16": "images/icon16.png",
        "32": "images/icon32.png",
        "128": "images/icon128.png"
    }
  }